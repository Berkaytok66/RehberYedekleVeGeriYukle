<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDialog">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/error_" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ANDROİD İZİNLERİ"
            android:textAlignment="center"
            android:textAppearance="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Year"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt_sucssesful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Android izinlerinin verilmediği tespit edildi lütfen izinleri kabul ederek devam edin"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />



        <Button
            android:id="@+id/izin_sorgu"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bacgrount_succses"
            android:text="İZİN İSTEĞİNDE BULUN"
            android:textColor="@color/colorPrimaryDialog" />

    </LinearLayout>

</LinearLayout>
